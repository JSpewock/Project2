
<form action=<%=action%> method='POST' id='form'>
    <!-- name of day -->
    <label for="name">Name</label>
    <input type="text" name="name" value="<%=nameValue%>" class="form-input">
    <!-- summary of day -->
    <label for="summary">Summary</label>
    <input type="text" name="summary" value="<%=sumValue%>" class="form-input">
    <!-- description of day -->
    <label for="description">Description</label>
    <textarea name="description"><%=descValue%></textarea>
    <!-- link to lesson notes -->
    <label for="lessonNotes">Link to lesson notes</label>
    <input type="text" name="lessonNotes" value="<%=lessonLink%>" class="form-input">
    <!-- link to zoom recording -->
    <label for="recording">Link to zoom recording</label>
    <input type="text" name="recording" value="<%=recLink%>" class="form-input">
    <!-- week number -->
    <label for="week">Week</label>
    <input type="number" name="week" value="<%=weekValue%>" min="1" max="12" class="form-input">
    <!-- day number -->
    <label for="day">Day</label>
    <input type="number" name="day" value="<%=dayValue%>" min="1" max="5" class="form-input">
    <!-- submit -->
    <input type="submit" value="Submit Day" id="submit-form">
</form>